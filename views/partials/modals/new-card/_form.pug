// begin::Input group
html
  head
  body
    .d-flex.flex-column.mb-7.fv-row
      // begin::Label
      label.d-flex.align-items-center.fs-6.fw-bold.form-label.mb-2
        span.required Name On Card
        i.fas.fa-exclamation-circle.ms-2.fs-7(data-bs-toggle='tooltip', title='Specify a card holder\'s name')
      // end::Label
      input.form-control.form-control-solid(type='text', placeholder, name='card_name', value='Max Doe')
    // end::Input group
    // begin::Input group
    .d-flex.flex-column.mb-7.fv-row
      // begin::Label
      label.required.fs-6.fw-bold.form-label.mb-2 Card Number
      // end::Label
      // begin::Input wrapper
      .position-relative
        // begin::Input
        input.form-control.form-control-solid(type='text', placeholder='Enter card number', name='card_number', value='4111 1111 1111 1111')
        // end::Input
        // begin::Card logos
        .position-absolute.translate-middle-y.top-50.end-0.me-5
          img.h-25px(src='assets/media/svg/card-logos/visa.svg', alt)
          img.h-25px(src='assets/media/svg/card-logos/mastercard.svg', alt)
          img.h-25px(src='assets/media/svg/card-logos/american-express.svg', alt)
        // end::Card logos
      // end::Input wrapper
    // end::Input group
    // begin::Input group
    .row.mb-10
      // begin::Col
      .col-md-8.fv-row
        // begin::Label
        label.required.fs-6.fw-bold.form-label.mb-2 Expiration Date
        // end::Label
        // begin::Row
        .row.fv-row
          // begin::Col
          .col-6
            select.form-select.form-select-solid(name='card_expiry_month', data-control='select2', data-hide-search='true', data-placeholder='Month')
              option
              option(value='1') 1
              option(value='2') 2
              option(value='3') 3
              option(value='4') 4
              option(value='5') 5
              option(value='6') 6
              option(value='7') 7
              option(value='8') 8
              option(value='9') 9
              option(value='10') 10
              option(value='11') 11
              option(value='12') 12
          // end::Col
          // begin::Col
          .col-6
            select.form-select.form-select-solid(name='card_expiry_year', data-control='select2', data-hide-search='true', data-placeholder='Year')
              option
              option(value='2021') 2021
              option(value='2022') 2022
              option(value='2023') 2023
              option(value='2024') 2024
              option(value='2025') 2025
              option(value='2026') 2026
              option(value='2027') 2027
              option(value='2028') 2028
              option(value='2029') 2029
              option(value='2030') 2030
              option(value='2031') 2031
          // end::Col
        // end::Row
      // end::Col
      // begin::Col
      .col-md-4.fv-row
        // begin::Label
        label.d-flex.align-items-center.fs-6.fw-bold.form-label.mb-2
          span.required CVV
          i.fas.fa-exclamation-circle.ms-2.fs-7(data-bs-toggle='tooltip', title='Enter a card CVV code')
        // end::Label
        // begin::Input wrapper
        .position-relative
          // begin::Input
          input.form-control.form-control-solid(type='text', minlength='3', maxlength='4', placeholder='CVV', name='card_cvv')
          // end::Input
          // begin::CVV icon
          .position-absolute.translate-middle-y.top-50.end-0.me-3
            // begin::Svg Icon | path: icons/duotune/finance/fin002.svg
            span.svg-icon.svg-icon-2hx
              svg(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24', fill='none')
                path(d='M22 7H2V11H22V7Z', fill='black')
                path(opacity='0.3', d='M21 19H3C2.4 19 2 18.6 2 18V6C2 5.4 2.4 5 3 5H21C21.6 5 22 5.4 22 6V18C22 18.6 21.6 19 21 19ZM14 14C14 13.4 13.6 13 13 13H5C4.4 13 4 13.4 4 14C4 14.6 4.4 15 5 15H13C13.6 15 14 14.6 14 14ZM16 15.5C16 16.3 16.7 17 17.5 17H18.5C19.3 17 20 16.3 20 15.5C20 14.7 19.3 14 18.5 14H17.5C16.7 14 16 14.7 16 15.5Z', fill='black')
            // end::Svg Icon
          // end::CVV icon
        // end::Input wrapper
      // end::Col
    // end::Input group
    // begin::Input group
    .d-flex.flex-stack
      // begin::Label
      .me-5
        label.fs-6.fw-bold.form-label Save Card for further billing?
        .fs-7.fw-bold.text-muted If you need more info, please check budget planning
      // end::Label
      // begin::Switch
      label.form-check.form-switch.form-check-custom.form-check-solid
        input.form-check-input(type='checkbox', value='1', checked)
        span.form-check-label.fw-bold.text-muted Save Card
      // end::Switch
    // end::Input group